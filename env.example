# ================================
# SERVER CONFIGURATION
# ================================
PORT=3000
HOST=0.0.0.0

# ================================
# DATABASE CONFIGURATION
# ================================
# MongoDB connection string - replace with your actual MongoDB URI
MONGODB_URI=mongodb://localhost:27017/chatgrow

# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/chatgrow

# Redis connection URL for caching and job queues
REDIS_URL=redis://localhost:6379

# ================================
# AUTHENTICATION & SECURITY
# ================================
# Secret key for JWT token signing - MUST BE CHANGED IN PRODUCTION!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_MINIMUM_32_CHARACTERS

# JWT token expiration times
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# ================================
# CORS & SECURITY
# ================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:5000,https://yourdomain.com

# IP whitelist (comma-separated, leave empty to allow all)
IP_WHITELIST=

# IP blacklist (comma-separated)
IP_BLACKLIST=

# Allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# EMAIL PROVIDERS
# ================================
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=ChatGrow

# Nodemailer (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# ================================
# SMS PROVIDERS
# ================================
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ================================
# PAYMENT GATEWAYS
# ================================
# Tranzila
TRANZILA_TERMINAL=your_tranzila_terminal
TRANZILA_USERNAME=your_tranzila_username

# Cardcom
CARDCOM_TERMINAL=your_cardcom_terminal
CARDCOM_USERNAME=your_cardcom_username
CARDCOM_API_KEY=your_cardcom_api_key

# GROW (Meshulam)
GROW_API_KEY=your_grow_api_key
GROW_API_SECRET=your_grow_api_secret

# Platform fees
PLATFORM_FEE_PERCENTAGE=2.5
PLATFORM_PHONE=052-XXX-XXXX
PLATFORM_EMAIL=support@chatgrow.com

# ================================
# GOOGLE SERVICES
# ================================
# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_STORAGE_BUCKET=your_bucket_name
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account-key.json

# Google Calendar API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# ================================
# AI SERVICES
# ================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# ================================
# ADMIN & SUPER ADMIN
# ================================
# Super admin emails (comma-separated)
SUPER_ADMIN_EMAILS=admin@yourdomain.com,superadmin@yourdomain.com

# ================================
# MONITORING & LOGGING
# ================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Sentry (Error tracking - optional)
SENTRY_DSN=

# ================================
# ENVIRONMENT
# ================================
# Set to 'development', 'production', or 'test'
NODE_ENV=development

# ================================
# OPTIONAL FEATURES
# ================================
# Feature flags
ENABLE_WHATSAPP=false
ENABLE_WEBHOOKS=false
ENABLE_AI_INSIGHTS=true

# WhatsApp (if enabled)
WHATSAPP_SESSION_PATH=./whatsapp-sessions 